{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "karimkharraz/multi-client",
            "hostname": "client",
            "essential":false   

        },
        {
            "name": "server",
            "image": "karimkharraz/multi-server",
            "hostname": "api",
            "essential":false

        },
        {
            "name": "worker",
            "image": "karimkharraz/multi-worker",
            "hostname": "worker",
            "essential":false

        },
        {
            "name":"nginx",
            "image":"karimkharraz/multi-nginx",
            "hostname": "nginx",
            "essential":true,
            "portMappings": [{
                "hostPort": 80,
                "containerPort":80
            }
            ],
            "links": ["client","server"]
        }
    ]


}